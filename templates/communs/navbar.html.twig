<div class="navbar bg-base-100">
    <div class="flex-1">
        <a href="{{ path('app_food_store') }}"  class="btn btn-ghost text-xl">
            <img src="{{ asset('images/logo.png') }}" alt="Logo" class="w-8 mr-2" />
            <span>Papparoni's</span>
        </a>
    </div>
    <div class="flex-none">
        <!-- Profile Dropdown -->
        <div class="dropdown dropdown-end">
            {% if app.user %}
                <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar">
                    <div class="w-10 rounded-full">
                        <img
                                alt="User Avatar"
                                src="{{ asset('images/utilisateur.png') }}"/>
                    </div>
                </div>
                <ul
                        tabindex="0"
                        class="menu menu-sm dropdown-content bg-base-100 rounded-box z-[1] mt-3 w-52 p-2 shadow">
                    <li>
                        <a class="justify-between">
                            {{ app.user.email }}
                        </a>
                    </li>
                    {% if app.user and app.user.isAdmin() %}
                        <li>
                            <a href='{{ path('admin_dashboard') }}'>
                                Admin
                            </a>
                        </li>
                    {% endif %}
                    <li><a href="{{ path('app_logout') }}">Logout</a></li>
                </ul>
            {% else %}
                <a href="{{ path('app_login') }}" class="btn btn-primary">Login</a>
            {% endif %}
        </div>
    </div>
</div>
